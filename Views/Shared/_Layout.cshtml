<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/reset.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio.styles.css" asp-append-version="true" />
</head>
<style>
    body {
        background-color: #07090a;
    }


    /* ======================================= NAVBAR CSS ======================================= */

    header {
        height: 7.5vh;
        background-color: transparent;
    }

    nav, nav > ul {
        display: flex;
        color: #FFF;
    }

        nav > ul {
            width: 100%;
            justify-content: end;
            height: 7.5vh;
        }

            nav > ul > li {
                display: flex;
                justify-content: center;
                align-items: center;
            }

    .nav-logo {
        height: 7.5vh;
        width: 30vw;
    }


    .li-options {
        color: #fff;
    }

    .li-flags {
        color: white;
        max-height: 100%;
        max-width: 100%;
    }

    .flags {
        transition: .25s;
        width: 3vw;
        height: auto;
    }

    .li-flags {
        margin-left: 1vw;
    }

        .li-flags:last-child {
            margin-right: 1vw;
        }

    ul > li:hover > img {
        filter: saturate(150%);
        filter: drop-shadow(2px 2px 10px #fff);
    }


    ul > .li-options {
        transition: 0.25s !important;
        width: 10vw;
        margin-right: 1vw;
        font-family: codeBold;
        letter-spacing: 2px;
        font-size: 1vw;
    }

    li > a {
        transition: 0.25s;
    }

    ul > .li-options > a:hover {
        cursor: pointer;
        color: #ff3838 !important;
    }

    .menu {
        display: none;
        height: 7.5vw;
    }

    .menu-item {
        height: 2px;
        width: 2vw;
        background-color: #fff;
    }


    @@font-face {
        font-family: codeBold;
        src: url('/font/CODEBold.otf');
    }


    /* TELA MD */

    @@media(max-width: 1279px) {

        ul > .li-options {
            font-size: 1.3vw;
        }

        .nav-logo {
            width: 60vw;
        }
    }


    /* TELA SM */

    @@media(max-width: 767px) {


        nav{
            justify-content: center;
        }

        nav > ul {            
            display: none;
        }

        .menu {           
            display: flex;
        }

        .nav-logo {           
            width: 60vw;
        }
    }


    /* TELA XS */

    @@media(max-width: 479px) {
           .nav-logo { 
        width: 70vw;
    }
    }


    /* ======================================= NAVBAR CSS ======================================= */


</style>
<body>

    <header>
        <nav>
            <a>
                <img class="nav-logo" src="~/images/official_mark.png" />
            </a>
            <ul>
                <li class="li-options">
                    <a> APRESENTAÇÃO </a>
                </li>
                <li class="li-options">
                    <a> PROJETOS </a>
                </li>
                <li class="li-options">
                    <a> CONTATO </a>
                </li>

                <li class="li-flags">
                    <img class="img-fluid flags" src="~/images/brazil.png" />
                </li>
                <li class="li-flags">
                    <img class="img-fluid flags" src="~/images/usa.png" />
                </li>
            </ul>
            <div class="menu">
                <div class="menu-item">&nbsp;</div>
                <div class="menu-item">&nbsp;</div>
                <div class="menu-item">&nbsp;</div>
            </div>
        </nav>
    </header>



    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
